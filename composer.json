{
    "name":        "kitpages/shop-bundle",
    "type":        "symfony-bundle",
    "description": "This bundle is used to create a shop with symfony2",
    "keywords":    ["shop", "store", "symfony", "bundle", "twig"],
    "homepage":    "https://github.com/kitpages/KitpagesShopBundle",
    "license":     "BSD",

    "authors": [
        {
            "name": "Philippe Le Van",
            "homepage": "https://twitter.com/#!/plv"
        }
    ],

    "require": {
        "php": ">=5.3.2",
        "symfony/framework-bundle": "2.1.*",
        "doctrine/orm": ">=2.2.3,<2.4-dev",
        "swiftmailer/swiftmailer":"4.2.*",
        "stof/doctrine-extensions-bundle" : "1.x",
        "jms/payment-core-bundle": "master-dev",
        "jms/payment-paypal-bundle": "master-dev"
    },

    "autoload": {
        "psr-0": {
            "Kitpages\\ShopBundle": ""
        }
    },
    "target-dir": "Kitpages/ShopBundle",
    "minimum-stability": "dev"
}
